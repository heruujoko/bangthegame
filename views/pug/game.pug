html
  head
    title BANG! The Dice Game
    meta(name='description', content='Home page')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/public/style.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous")
  body
  div#cont.container-fluid
    img#img-logo.img-fluid(src='/public/images/bang_logo.png')
    .chat.center
      h3#room-id-text.center Game ID: 
        span#room-id  
      h5.center#num-users
      span#announce-turn Waiting to start
      p.center#announce
      div#main-body
        div.board.p-4
          div.row.align-items-start.mt-2
            .col.row.justify-content-start
              .col.pos-border#pos0
              .col
                .row
                  .col.pos-health#health0
                .row
                  .col.pos-arrow#arrow0
            .col.row.justify-content-center
              .col.pos-border#pos1
              .col
                .row
                  .col.pos-health#health1
                .row
                  .col.pos-arrow#arrow1
            .col.row.justify-content-end
              .col.pos-border#pos2
              .col
                .row
                  .col.pos-health#health2
                .row
                  .col.pos-arrow#arrow2
          div.row.align-items-center.mt-4
            .col.row.justify-content-start
              .col.pos-border#pos7
              .col
                .row
                  .col.pos-health#health7
                .row
                  .col.pos-arrow#arrow7
            .col.justify-content-center
              .row
                .col#arrow-area
              .row.mt-2
                .col#dice-area
            .col.row.justify-content-end
              .col.pos-border#pos3
              .col
                .row
                  .col.pos-health#health3
                .row
                  .col.pos-arrow#arrow3
          div.row.align-items-end.mt-4
            .col.row.justify-content-start
              .col.pos-border#pos6
              .col
                .row
                  .col.pos-health#health6
                .row
                  .col.pos-arrow#arrow6
            .col.row.justify-content-center
              .col.pos-border#pos5
              .col
                .row
                  .col.pos-health#health5
                .row
                  .col.pos-arrow#health5
            .col.row.justify-content-end
              .col.pos-border#pos4
              .col
                .row
                  .col.pos-health#health4
                .row
                  .col.pos-arrow#arrow4
        div.chat-box
          ul#messages
          form.game-form#msg-form(action='', onsubmit="msgSounds()")
            input.rounded#m(autocomplete='off', placeholder='Type message', required)
            button.btn.btn-sm.btn-outline-secondary(onclick="scrollToBottom()")
              i.fas.fa-angle-right
          form.game-form#rdy-form(action='')
            button.btn.btn-dark#rdy-btn(onmousedown="buttonSounds()") READY
          form.game-form.hide#start-form(action='')
            button.btn.btn-dark#start-btn(onmousedown="buttonSounds()") Start Game
          form.game-form.hide#roll-form(action='')
            button.btn.btn-dark#roll-btn(onmousedown="diceSounds()") Roll Dice
          form.game-form.hide#reroll-form(action='')
            button.btn.btn-dark#reroll-btn(onmousedown="diceSounds()") Re-Roll 
              span#dice-num
          form.game-form.hide#end-turn-form(action='')
            button.btn.btn-dark#end-turn-btn(onmousedown="buttonSounds()") End Turn
      audio(src="/public/sounds/bang.mp3" type="audio/mpeg" preload="auto")#bang-sound
      audio(src="/public/sounds/beer.mp3" type="audio/mpeg" preload="auto")#beer-sound
      audio(src="/public/sounds/gatling.mp3" type="audio/mpeg" preload="auto")#gatling-sound
      audio(src="/public/sounds/dynamite.mp3" type="audio/mpeg" preload="auto")#dynamite-sound
      audio(src="/public/sounds/arrow.mp3" type="audio/mpeg" preload="auto")#arrow-sound
      audio(src="/public/sounds/crow.mp3" type="audio/mpeg" preload="auto")#crow-sound
      audio(src="/public/sounds/button.mp3" type="audio/mpeg" preload="auto")#button-sound
      audio(src="/public/sounds/dice.mp3" type="audio/mpeg" preload="auto")#dice-sound
      audio(src="/public/sounds/msg.mp3" type="audio/mpeg" preload="auto")#msg-sound
      audio(src="/public/sounds/horse.mp3" type="audio/mpeg" preload="auto")#horse-sound
      .logout.left.hide
        a(href='/logout').text Logout
      div#copyright-main.center
        footer#footer-1
          div
            small BANG! is a - registered – trademark of daVinci Editrice S.r.l.
          div
            small dV Giochi is a - registered – trademark of daVinci Editrice S.r.l. 
          div
            small This offer is independent from dV Giochi - daVinci Editrice S.r.l.
          div
            small dV Giochi - daVinci Editrice S.r.l. is in no way responsible for the contents. 
