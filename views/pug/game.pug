    script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js")
    script(src="/public/libraries/jquery.ui.touch-punch.min.js")
    script(src='/socket.io/socket.io.js')
